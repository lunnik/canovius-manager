<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="ActivityStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/window_color_act</item>
        <item name="android:textColorPrimary">@color/text_color_act</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:actionMenuTextColor">@color/menu_color</item>
    </style>


    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">@dimen/headerbar_elevation</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppCompat.TranslucentSystemBars" parent="ActivityStyle">
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <style name="AppCompat.TranslucentSystemBarsLoign" parent="ActivityStyle">


    </style>


    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:background">@color/white_color</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.CardContentList" parent="android:Widget">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:background">@color/white_color</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="appbar">
        <item name="android:background">@color/primary_act</item>
    </style>

    <style name="ButtonMaterial">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">3dp</item>
    </style>


    <style name="miEstiloTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#006633</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">#f0f0f0</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="styleFragments" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="estiloTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_dark_act</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="estiloEditText" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_dark_act</item>
        <item name="android:textSize">15dp</item>


    </style>

    <style name="estiloButton" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/primary_dark_act</item>
        <item name="android:textSize">15dp</item>


    </style>

    <style name="styleButtonLoggin" parent="@android:style/Widget.Button">

        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>


    </style>


</resources>
